.container{
  display: flex;
  flex-direction: column;
}

.header-img{
  width: 100%;
  height: 320rpx;
  filter: blur(20px);
}

.movie-img{
  width: 175rpx;
  height: 238rpx;
  /* 脱离文档流 */
  position: absolute;
  top:160rpx;
  right: 30rpx;
}

.head-img-hover{
  width: 100%;
  height: 320rpx;
  position: absolute;
  display: flex;
  flex-direction: column;
  padding-left: 40rpx;
}

.main-title{
  font-size: 38rpx;
  color: #fff;
  font-weight: bold;
  letter-spacing: 2px;
  margin-top: 50rpx;
}

.sub-title{
  font-size: 28rpx;
  color: #fff;
  margin-top: 30rpx;
}

.like{
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
}

.highlight-font{
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}

.plain-font{
  color: #666;
  margin-right: 30rpx;
}