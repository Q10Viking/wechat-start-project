.container{
  display: flex;
  flex-direction: column;
  position: relative;
}

.head-image{
  width: 100%;
  height: 460rpx;
}

.author-date{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 0 0 30rpx;
}

.avatar{
  width: 64rpx;
  height: 64rpx;
}

.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}

.const-text{
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #999;
}

.date{
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}

.title{
  font-size: 36rpx;
  font-weight: 700;
  color:  #4b556c;
  margin-left: 40rpx;
  margin-top: 20rpx;
  letter-spacing: 2rpx;
}
/* 父容器 */
.tool{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 22rpx;
}

.circle{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  width: 660rpx;
}

.circle-image{
  width: 90rpx;
  height: 90rpx;
  margin-left: 30rpx;
}

/* 子元素的在父容器中的居中 */
.horizon{
  width: 660rpx;
  height: 1rpx;
  background-color: #e5e5e5;
  /* 绝对定位 */
  position: absolute;
  z-index: -99;
}

.detail{
  color: #666;
  font-size: 28rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
  line-height: 44rpx;
  letter-spacing: 2rpx;
}

.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 170rpx; /* 通过计算 */
}