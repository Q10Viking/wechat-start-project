.container{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.classic-image{
    width: 422rpx;
    height: 422rpx;
    border-radius: 50%;
    margin-top:60rpx;
}

.player-img{
    width: 120rpx;
    height: 120rpx;
    position: relative;
    bottom: 270rpx;
}

.tag-image{
    width: 44rpx;
    height: 128rpx;
    position:relative;
    right: 310rpx;
    bottom: 160rpx; 
}

.content{
    max-width: 580rpx;
}

.myrotation{
    transform: rotate(360deg);
    animation: myrotation 12s linear infinite;
}

@keyframes myrotation{
    from{
        transform: rotate(0deg);
    }
    to{
        transform: rotate(360deg);
    }
}